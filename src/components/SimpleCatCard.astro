---
interface Props {
  name: string;
  slug: string;
  description: string;
  callToAction?: string;
  active: boolean;
}


const  {name, slug, description, callToAction, active} = Astro.props;
const bgColor = active ? "bg-slate-700" : "transparent hover:bg-slate-700";
const lineClamp = active ? "line-clamp-none" : "line-clamp-2";
const textColor = active ? "text-white" : "text-gray-200 hover:text-white";
const borderShadow = active ? "shadow-2xl border-blue-500" : "border-blue-400 hover:border-blue-500 hover:shadow-2xl";
export const prerender = true
---

<div transition:name={`cat-card-${name}`} class={`${bgColor} ${textColor} ${borderShadow} border-2 w-full  space-y-4 py-4 px-6 rounded-lg`}>
  <h1 class="font-bold text-2xl ">{name}</h1>
  <p class={`${lineClamp} text-wrap`}>{description+". "+description}</p>
  {!active && <a class="inline-block px-4 py-2 border-2 border-blue-400 hover:bg-gray-200 hover:text-slate-600 hover:font-semibold" href={slug}>{callToAction+" "+name}</a>}
</div>