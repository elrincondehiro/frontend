---
interface Props {
  name: string;
  slug: string;
  description: string;
  callToAction?: string;
  active: boolean;
}

const  {name, slug, description, callToAction, active} = Astro.props;
export const prerender = true
---

<div transition:name={`cat-card-${name}`} class="border-2 border-blue-400 w-full hover:shadow-xl hover:bg-slate-600 hover:border-blue-500 px-8 py-2">
  <h1 class="font-bold text-2xl my-3">{name}</h1>
  <p class="line-clamp-2">{description}</p>
  {active && <a class="inline-block px-4 py-2 my-4 border-2 border-blue-400" href={slug}>{callToAction+" "+name}</a>}
</div>