---
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="descripcion generica de la web" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <meta name="generator" content={Astro.generator} /> -->
		<title>{title}</title>
		<ClientRouter/>
		
	</head>
	<body class="bg-black">
		<!-- <Header/> -->
		<main>
			<div class="text-center flex flex-col items-center gap-4 min-h-[calc(100svh_-4rem)] bg-slate-600 w-[calc(100%-2rem)] max-w-7xl mx-auto py-8 px-4 my-8" >
				<slot/>
			</div>
		</main>

		<script>
      import { initializeCart } from '@/lib/cartStore';
      
      // Esperar a que el DOM estÃ© listo
      document.addEventListener('DOMContentLoaded', () => {
        initializeCart();
      });
    </script>
		<!-- <Footer/> -->
	</body>
</html>